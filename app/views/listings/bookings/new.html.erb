<div class="w-full flex flex-col md:flex-row">
  <div class="w-full md:w-1/2">
    <%= link_to "Back to listing", @listing, class: "bg-gray-100 rounded-lg border-2 border-gray-900 mr-auto p-2" %>
    <h1 class="text-4xl mt-8"> Book your stay at <%= @listing.title %> </h1>
    <br/>
    <%= image_tag @listing.images.first, class: "h-[500px] hidden md:flex" %>
  </div>
  <div class="w-full md:w-1/2 md:pt-40">
    <div class="max-w-2xl rounded-lg shadow-lg mx-auto p-4">
      <%= form_with model: [@listing, @booking] do |f| %>
        <div class="md:w-3/4 mx-auto flex flex-col gap-4">
          <% f.object.errors.full_messages.each do |error| %>
            <span class="text-red-700 bg-red-300 border-y-2 border-red-600 px-2"> <i class="fa-solid fa-exclamation"></i> <%= error %> </span>
          <% end %>
          
          <div class="flex flex-col gap-2">
            <%= f.label :checkin_date, class: "text-lg" %>
            <%= f.date_field :checkin_date, required: true, class: "w-full rounded-lg bg-gray-100 border-none" %>
          </div>

          <div class="flex flex-col gap-2">
            <%= f.label :checkout_date, class: "text-lg" %>
            <%= f.date_field :checkout_date, required: true, class: "w-full rounded-lg bg-gray-100 border-none" %>
          </div>

          <%= f.submit "Book your stay", class: "rounded-lg p-2 bg-green-500 text-green-100" %>
        </div>
      <% end %>
    </div>
  </div>
</div>